{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AllowedOrigins": [
    "https://localhost:3001",
    "http://localhost:3000"
  ],
  "BearerAuthOptions": {
    "Secret": null, // NB: Automatically generated if not provided.
    "Issuer": null, // NB: Automatically generated if not provided. If you want to add multiple issuers, you can use the semicolon (;) as a separator.
    "Audience": "https://localhost:3001;http://localhost:3000", // NB: Automatically generated if not provided. If you want to add multiple audiences, you can use the semicolon (;) as a separator.
    "AccessTokenExpiresIn": "00:15:00",
    "RefreshTokenExpiresIn": "00:60:00",
    "AllowMultipleSessions": true
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=NextSolution-{{DefaultDatabaseId}};Trusted_Connection=True;MultipleActiveResultSets=true"
  }
}
